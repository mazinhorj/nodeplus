<h2>Todas as Tarefas</h2>
<ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/" class="title-done">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}
            <div class="actions-c">
                {{!-- mudar status da tarefa --}}
                <form action="/tasks/updatestatus" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form> 
                
                {{!-- editar tarefa --}}
                <form action="/tasks/edit/{{this.id}}" method="get">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                </form>

                {{!-- excluir tarefa --}}
                <form action="/tasks/remove" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>